<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.feliperonderos.meetingapp.ViewMeeting">
    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/black"></TextView>
    <TextView android:id="@+id/place"
        android:layout_below="@+id/title"
        android:maxLines="1"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></TextView>
    <TextView android:id="@+id/datetime"
        android:layout_below="@+id/place"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/black"></TextView>
    <Button
        android:id="@+id/seeMap"
        android:text="View Meeting Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetime" />
    <Button
        android:id="@+id/navigate"
        android:text="Navigate to Meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeMap" />
    <Button
        android:id="@+id/invite"
        android:text="Invite someone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigate" />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:layout_below="@+id/invite"
        android:layout_marginRight="0dp"></ListView>
</RelativeLayout>
